<script>
    //Get URL Parameters
    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }

    //Redirect if not signed in
    //document.cookie = 'id=' + getParameterByName('id');
    if (!document.cookie) {
        window.location = "http://localhost:56602/home";
    } else if (getParameterByName('id')) {
        document.cookie = "id="+ getParameterByName('id') + " username=" + getParameterByName('username') + ";expires= Thu, 7 Dec 2017 12:00:00 UTC";
    }

