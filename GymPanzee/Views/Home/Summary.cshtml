<script>
        $(document).ready(function () {
            $.ajax({
                url: "/Home/SummaryInformation",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                async: false,
                type: "POST",
                data: JSON.stringify({ userid: userid  }),
                success: function (json) {
                    console.log(json);

                    var testing = [{
